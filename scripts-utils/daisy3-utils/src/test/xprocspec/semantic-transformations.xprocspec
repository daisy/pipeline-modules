<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
	       xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
	       xmlns="http://www.daisy.org/z3986/2005/dtbook/"
	       xmlns:ssml="http://www.w3.org/2001/10/synthesis"
	       xmlns:xml="http://www.w3.org/XML/1998/namespace"
	       xmlns:d="http://www.daisy.org/ns/pipeline/data"
	       xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
	       xmlns:tmp="http://www.daisy.org/ns/pipeline/tts">

  <x:script>
    <p:declare-step version="1.0" name="main"
  		    xmlns:p="http://www.w3.org/ns/xproc"
  		    type="pxi:semantic-tr">

      <p:input port="source" primary="true"/>
      <p:output port="result" primary="true"/>

      <p:xslt>
  	<p:input port="stylesheet">
  	  <p:document href="../../main/resources/xml/internal/tts/dtbook-semantic-transform.xsl"/>
  	</p:input>
	<p:input port="parameters">
	  <p:empty/>
	</p:input>
      </p:xslt>
    </p:declare-step>
  </x:script>

  <x:scenario label="roman numerals outside title">
    <x:call step="pxi:semantic-tr">
      <x:input port="source">
	<x:document type="inline">
	  <dtbook>
	    <w>XIV</w>
	  </dtbook>
	</x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="transformed" type="compare">
      <x:document type="inline">
	<dtbook>
	  <w>XIV</w>
	</dtbook>
      </x:document>
    </x:expect>
  </x:scenario>

  <x:scenario label="roman numerals inside title">
    <x:call step="pxi:semantic-tr">
      <x:input port="source">
	<x:document type="inline">
	  <dtbook>
	    <level1>
	      <h1><span><w>I</w></span></h1>
	    </level1>
	    <level1>
	      <h1><span><w>II</w></span></h1>
	    </level1>
	  </dtbook>
	</x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="transformed" type="compare">
      <x:document type="inline">
	<dtbook>
	  <level1>
	    <h1>
	      <span>
                <w>
		  <ssml:say-as interpret-as="cardinal">I</ssml:say-as>
                </w>
	      </span>
	    </h1>
	  </level1>
	  <level1>
	    <h1>
	      <span>
                <w>
		  <ssml:say-as interpret-as="cardinal">II</ssml:say-as>
                </w>
	      </span>
	    </h1>
	  </level1>
	</dtbook>
      </x:document>
    </x:expect>
  </x:scenario>

    <x:scenario label="invalid Roman numerals">
    <x:call step="pxi:semantic-tr">
      <x:input port="source">
	<x:document type="inline">
	  <dtbook>
	    <level1>
	      <h1><span><w>I</w></span></h1>
	    </level1>
	    <level1>
	      <h1><span><w>IgI</w></span></h1>
	    </level1>
	  </dtbook>
	</x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="transformed" type="compare">
      <x:document type="inline">
	<dtbook>
	   <level1>
	     <h1>
	       <span>
		 <w>I</w>
	       </span>
	     </h1>
	   </level1>
	   <level1>
	     <h1>
	       <span>
		 <w>IgI</w>
	       </span>
	     </h1>
	   </level1>
	</dtbook>
      </x:document>
    </x:expect>
  </x:scenario>

  <x:scenario label="mixed">
    <x:call step="pxi:semantic-tr">
      <x:input port="source">
	<x:document type="inline">
	  <dtbook>
	    <level1>
	      <h1>
		<span>
		  <w>I</w>
		</span>
	      </h1>
	      <level2>
		<h2>
		  <w>A</w>
		</h2>
		<h2>
		  <w>B</w>
		</h2>
		<h2>
		  <w>C</w>
		</h2>
	      </level2>
	    </level1>
	    <level1>
	      <h1>
		<w>II</w>
	      </h1>
	    </level1>
	  </dtbook>
	</x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="transformed" type="compare">
      <x:document type="inline">
	<dtbook>
	    <level1>
	      <h1>
		<span>
		  <w>
                    <ssml:say-as interpret-as="cardinal">I</ssml:say-as>
		  </w>
		</span>
	      </h1>
	      <level2>
		<h2>
		  <w>A</w>
		</h2>
		<h2>
		  <w>B</w>
		</h2>
		<h2>
		  <w>C</w>
		</h2>
	      </level2>
	    </level1>
	    <level1>
	      <h1>
		<w>
		  <ssml:say-as interpret-as="cardinal">II</ssml:say-as>
		</w>
	      </h1>
	    </level1>
	</dtbook>
      </x:document>
    </x:expect>
  </x:scenario>


</x:description>
